extends layout

block head
  title= 'Catan | Login'

block content
  .main.container.auth
        h1.reg_title Welcome to Catan
        form(method='POST' action='/').form
          div.form-group
            //-label(for='Username') Username
            input.form-control(type='text' id='username' placeholder='Username' name='username')
          div.form-group
            //- label(for='password') Password
            input.form-control(type='password' id='password' placeholder='Password' name='password')
          button.front.btn.btn-primary(type='submit') Log in
          .logspace
            p Don't have an account? 
              a(href="register") Sign Up
